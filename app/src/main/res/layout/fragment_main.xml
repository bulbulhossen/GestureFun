<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/swipe_two"
        android:textColor="@color/c_1f8a9e" />

    <com.hrskrs.gesturefunlibrary.DeleteOnSwipeEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Swipe with threshold 200"
        custom:swipeMode="2"
        custom:threshold="200" />

    <com.hrskrs.gesturefunlibrary.DeleteOnSwipeEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Swipe with threshold 400"
        custom:swipeMode="2"
        custom:threshold="200" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="@color/c_1f8a9e" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/swipe_single"
        android:textColor="@color/c_1f8a9e" />

    <com.hrskrs.gesturefunlibrary.DeleteOnSwipeEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Swipe with threshold 200"
        custom:swipeMode="1"
        custom:threshold="200" />

    <com.hrskrs.gesturefunlibrary.DeleteOnSwipeEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Swipe with threshold 400"
        custom:swipeMode="1"
        custom:threshold="200" />
</LinearLayout>